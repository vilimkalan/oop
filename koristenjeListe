
using System.Runtime.Serialization;

internal class Program
{
    static void Main(string[] args)
    {
        int kolicina = 10;
        int najveci = 100;

        Random generator = new Random();
        List<int> numbers = new List<int>();

       

        for (int i = 0; i < kolicina; i++)
        {
            numbers.Add(generator.Next(najveci + 1));
        }
        double average = numbers.Average();
        Console.WriteLine("prosjecan broj je " + average);
        Console.WriteLine(string.Join(",", numbers));
        //dodavanje drugog skupa u listu
        int[] dodatniBrojevi = new int[] {0,2,3,4,0};

        numbers.AddRange(dodatniBrojevi);
        Console.WriteLine();
        Console.WriteLine(string.Join(",", numbers));
        Console.WriteLine($"prosjek je sada{numbers.Average()}");

        //pretvaranje liste u array
        int[] NumbersToArray = numbers.ToArray();

        //pronalazenje elemenata u listi
        Console.WriteLine();

        Console.WriteLine($"dali postoji 0 u arrayu {numbers.Contains(0)}");
        Console.WriteLine($"gdje je nula u lsiti {numbers.IndexOf(0)}");
        Console.WriteLine($"gdje je zadnja nula u listi {numbers.LastIndexOf(0)}");

        //sorting
        Console.WriteLine();

        numbers.Sort();
        Console.WriteLine(string.Join(",", numbers));
        numbers.Reverse();
        Console.WriteLine(string.Join(",", numbers));


        //removeanje
        Console.WriteLine();

        numbers.Remove(0);
        numbers.Remove(0);

        Console.WriteLine(string.Join(",", numbers));
        numbers.RemoveAt(0);
        Console.WriteLine(string.Join(",", numbers));
        numbers.Clear();




    }

}
